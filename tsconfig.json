{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "incremental": true,
    "tsBuildInfoFile": "./.tsbuildinfo",
    "removeComments": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "paths": {
      "@shared/*": ["./backend/shared/*"],
      "@shared/types": ["./backend/shared/types/index.ts"],
      "@shared/utils": ["./backend/shared/utils/index.ts"],
      "@shared/database": ["./backend/shared/database/index.ts"]
    },
    "baseUrl": ".",
    "types": ["node", "jest"]
  },
  "include": [],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "coverage",
    ".next"
  ],
  "references": []
}