# Environment
NODE_ENV=development

# Database
DATABASE_URL=postgresql://postgres:password@postgres:5432/aipos
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_DB=aipos
POSTGRES_PORT=5432

# Redis
REDIS_URL=redis://redis:6379
REDIS_PORT=6379

# RabbitMQ
RABBITMQ_URL=amqp://guest:guest@rabbitmq:5672
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_PORT=5672
RABBITMQ_MANAGEMENT_PORT=15672

# Auth & JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
BCRYPT_ROUNDS=12

# External Services
OPENAI_API_KEY=sk-your-openai-api-key-here
SMS_API_KEY=your-sms-api-key-here
PG_API_KEY=your-payment-gateway-api-key-here

# Service URLs (Docker 내부 통신)
API_GATEWAY_URL=http://api-gateway:3000
AUTH_SERVICE_URL=http://auth-service:3001
STORE_SERVICE_URL=http://store-management-service:3002
DASHBOARD_SERVICE_URL=http://dashboard-service:3003
ORDER_SERVICE_URL=http://order-service:3004
PAYMENT_SERVICE_URL=http://payment-service:3005
AI_SERVICE_URL=http://ai-service:3006
ANALYTICS_SERVICE_URL=http://analytics-service:3007
NOTIFICATION_SERVICE_URL=http://notification-service:3008
USER_PROFILE_SERVICE_URL=http://user-profile-service:3009
HISTORY_SERVICE_URL=http://history-service:3010
SCRAPING_SERVICE_URL=http://scraping-service:3011
QR_SERVICE_URL=http://qr-service:3012
INVENTORY_SERVICE_URL=http://inventory-service:3013
DELIVERY_SERVICE_URL=http://delivery-service:3014
HARDWARE_SERVICE_URL=http://hardware-service:3015

# Frontend URLs
POS_ADMIN_WEB_URL=http://pos-admin-web:4000
QR_ORDER_WEB_URL=http://qr-order-web:4001
KITCHEN_DISPLAY_WEB_URL=http://kitchen-display-web:4002

# External URLs (for browser access)
EXTERNAL_API_URL=http://localhost:80
EXTERNAL_POS_ADMIN_URL=http://localhost:4000
EXTERNAL_QR_ORDER_URL=http://localhost:4001
EXTERNAL_KITCHEN_DISPLAY_URL=http://localhost:4002

# Nginx
NGINX_PORT=80
NGINX_SSL_PORT=443

# Rate Limiting
AI_RATE_LIMIT_PER_HOUR=100
SCRAPING_RATE_LIMIT_PER_HOUR=10
GENERAL_RATE_LIMIT_PER_HOUR=1000

# File Upload
MAX_FILE_SIZE=10MB
UPLOAD_DIR=/app/uploads

# Logging
LOG_LEVEL=debug
LOG_FORMAT=json

# Health Check
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=10s
HEALTH_CHECK_RETRIES=3

# Development
HOT_RELOAD=true
DEBUG_MODE=true