{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "node",
    "allowJs": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "types": [
      "node",
      "express",
      "jest"
    ],
    "paths": {
      "@shared/*": ["../../../backend/shared/*"],
      "@shared/types": ["../../../backend/shared/types/index.ts"],
      "@shared/utils": ["../../../backend/shared/utils/index.ts"],
      "@shared/database": ["../../../backend/shared/database/index.ts"]
    }
  },
  "include": [
    "src/**/*",
    "**/*.ts",
    "**/*.js"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}