    "baseUrl": "./src",
    "downlevelIteration": true,
    "paths": {
      "@shared/database": ["../../shared/database/src"],
      "@shared/types": ["../../shared/types"],
      "@shared/utils": ["../../shared/utils"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.test.ts", "**/*.spec.ts"]
}